<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="racine" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="garage.presenter.BarreMenuPresenter">
   <children>
      <MenuBar HBox.hgrow="ALWAYS">
        <menus>
          <Menu mnemonicParsing="false" text="UC">
            <items>
              <MenuItem fx:id="miListVoitures" mnemonicParsing="false" onAction="#listerVoitures" text="Lister les voitures" />
                  <MenuItem fx:id="miAjoutVoiture" mnemonicParsing="false" onAction="#ajouterVoiture" text="Ajouter une voiture" />
                  <MenuItem fx:id="miStats" mnemonicParsing="false" onAction="#afficherStats" text="Voir les stats" />
                  <MenuItem fx:id="miQuitter" mnemonicParsing="false" onAction="#quitter" text="Quitter" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Aide">
            <items>
            	<!-- Platform.exit() -->
              <MenuItem fx:id="miAPropos" mnemonicParsing="false" onAction="#infDialAPropos" text="A propos" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</HBox>
